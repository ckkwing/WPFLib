    <SolidColorBrush x:Key="WaterMarkTextBrush" Color="#BFFFFFFF"/>

    <Style x:Key="CommonPasswordBoxWithToggleStyle"
       TargetType="{x:Type customControl:CommonPasswordBoxWithToggle}">
        <Setter Property="Background" Value="#0AFFFFFF" />
        <Setter Property="BorderBrush" Value="#14FFFFFF" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="ShowPasswordIcon" Value="{DynamicResource IMG_INDICATOR_SHOW_PASSWORD}"/>
        <Setter Property="HidePasswordIcon" Value="{DynamicResource IMG_INDICATOR_HIDE_PASSWORD}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type customControl:CommonPasswordBoxWithToggle}">
                    <Grid Focusable="True">
                        <Border x:Name="PART_Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <!--Left icon-->
                                <!--<Path Grid.Column="1" 
                                  x:Name="PathUC"
                                  Height="16"
                                  Width="16"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Data="{Binding LeftIconButtonContent, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                  Fill="{TemplateBinding Foreground}"
                                  Stretch="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},Path=IconStretch}" 
                                  Margin="0,0,6,0" Visibility="{TemplateBinding LeftIconButtonVisibility}"/>-->
                                <Image Grid.Column="0" 
                                  x:Name="IconLock"
                                  Height="16"
                                  Width="16"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Source="{Binding LeftIconButtonContent, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                  Margin="0,0,6,0" Visibility="{TemplateBinding LeftIconButtonVisibility}"/>

                                <!--Place hoder for text left margin-->
                                <Grid Grid.Column="1" Background="{TemplateBinding Background}" />

                                <!--Water mark-->
                                <Border Grid.Column="2"
                                    Name="PART_WaterMark"
                                    Panel.ZIndex="100"
                                    IsHitTestVisible="False"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    Opacity="0">
                                    <Border.Background>
                                        <VisualBrush AlignmentX="Left" Stretch="None">
                                            <VisualBrush.Visual>
                                                <TextBlock Text="{TemplateBinding WaterText}" FontSize="{TemplateBinding FontSize}" Foreground="{DynamicResource WaterMarkTextBrush}"/>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Border.Background>
                                </Border>
                                <!-- Ciphertext mode -->
                                <PasswordBox Grid.Column="2"
                                         x:Name="PART_PasswordBox" CaretBrush="White" MaxLength="{Binding PasswordMaxLength, RelativeSource={RelativeSource TemplatedParent}}"
                                         Visibility="{Binding IsPasswordVisible,RelativeSource={RelativeSource TemplatedParent},Converter={StaticResource InvertingBooleanToVisibilityConverter}}"
                                         PasswordChar="●"
                                         VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                         VerticalContentAlignment="Center"
                                         BorderThickness="0" Background="{TemplateBinding Background}"
                                         FontSize="{TemplateBinding FontSize}" Foreground="{TemplateBinding Foreground}" />
                                <!-- Plaintext mode -->
                                <TextBox Grid.Column="2" Style="{x:Null}" SelectionBrush="#FF00CCCC"
                                     x:Name="PART_TextBox" CaretBrush="White" MaxLength="{Binding PasswordMaxLength, RelativeSource={RelativeSource TemplatedParent}}"
                                     Visibility="{Binding IsPasswordVisible, RelativeSource={RelativeSource TemplatedParent},Converter={StaticResource BooleanToVisibilityConverter}}"
                                     Text="{Binding Password, RelativeSource={RelativeSource TemplatedParent},UpdateSourceTrigger=PropertyChanged}"
                                     VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                     VerticalContentAlignment="Center"
                                     BorderThickness="0" Background="{TemplateBinding Background}"
                                     FontSize="{TemplateBinding FontSize}" Foreground="{TemplateBinding Foreground}" />
                                <!-- Switch button -->
                                <ToggleButton Grid.Column="3"
                                          Margin="5,0"
                                          IsChecked="{Binding IsPasswordVisible,RelativeSource={RelativeSource TemplatedParent},Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                          Width="16"
                                          Height="16">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="Transparent">
                                                            <!--<Path x:Name="EyeIcon"
                                                              Data="{Binding HidePasswordIcon,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type customControl:CommonPasswordBoxWithToggle}}}"
                                                              Fill="#666"
                                                              Stretch="Uniform"/>-->
                                                            <Image x:Name="EyeIcon"
                                                              Source="{Binding HidePasswordIcon,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type customControl:CommonPasswordBoxWithToggle}}}" />
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter TargetName="EyeIcon" 
                                                                    Property="Source"
                                                                    Value="{Binding ShowPasswordIcon,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type customControl:CommonPasswordBoxWithToggle}}}"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Password" Value="">
                            <Setter TargetName="PART_WaterMark" Property="Opacity" Value="1"/>
                        </Trigger>
                        <Trigger Property="Password" Value="{x:Null}">
                            <Setter TargetName="PART_WaterMark" Property="Opacity" Value="1"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="#FF00CCCC"/>
                        </Trigger>
                        <Trigger SourceName="PART_PasswordBox" Property="IsFocused" Value="True">
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="#FF00CCCC"/>
                            <Setter Property="Background" Value="Black" />
                        </Trigger>
                        <Trigger SourceName="PART_TextBox" Property="IsFocused" Value="True">
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="#FF00CCCC"/>
                            <Setter Property="Background" Value="Black" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
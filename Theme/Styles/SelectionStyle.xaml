<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Default selection box style -->
    <Style x:Key="DefaultSelectionRectangleStyle" TargetType="Rectangle">
        <Setter Property="Fill" Value="#1A00CCCC"/>
        <Setter Property="Stroke" Value="#FF00CCCC"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <!--<Setter Property="StrokeDashArray" Value="2,2"/>-->
        <Setter Property="Opacity" Value="0.7"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="1" 
                                  Color="#33000000" 
                                  BlurRadius="3"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Highlight selection box style -->
    <Style x:Key="HighlightSelectionRectangleStyle" TargetType="Rectangle">
        <Setter Property="Fill" Value="#4DFF5722"/>
        <Setter Property="Stroke" Value="#FFFF5722"/>
        <Setter Property="StrokeThickness" Value="1.5"/>
        <Setter Property="StrokeDashArray" Value="3,1"/>
        <Setter Property="Opacity" Value="0.8"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="2" 
                                  Color="#66FF5722" 
                                  BlurRadius="5"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Simplified selection box style -->
    <Style x:Key="MinimalSelectionRectangleStyle" TargetType="Rectangle">
        <Setter Property="Fill" Value="#0D000000"/>
        <Setter Property="Stroke" Value="#FF757575"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeDashArray" Value="1,1"/>
        <Setter Property="Opacity" Value="0.6"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
    </Style>

    <!-- Default selection of ListBoxItem style -->
    <Style x:Key="DefaultSelectedItemStyle" TargetType="ListBoxItem">
        <Setter Property="BorderBrush" Value="#FF00CCCC"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#3300CCCC" Offset="0"/>
                    <GradientStop Color="#1A00CCCC" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="2" 
                                  Color="#6600CCCC" 
                                  BlurRadius="5"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Highlight selection of ListBoxItem style -->
    <Style x:Key="HighlightSelectedItemStyle" TargetType="ListBoxItem">
        <Setter Property="BorderBrush" Value="#FFFF5722"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#40FF5722" Offset="0"/>
                    <GradientStop Color="#20FF5722" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="3" 
                                  Color="#80FF5722" 
                                  BlurRadius="8"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Simplified selection of ListBoxItem style -->
    <Style x:Key="MinimalSelectedItemStyle" TargetType="ListBoxItem">
        <Setter Property="BorderBrush" Value="#FF424242"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1A424242" Offset="0"/>
                    <GradientStop Color="#0D424242" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>